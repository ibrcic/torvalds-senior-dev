<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ImageView android:id="@+id/item_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:includeFontPadding="false"
               android:layout_marginLeft="3dp"
               android:contentDescription="An item"
               android:src="@drawable/img_ist_logo"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/item_detail_name"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".view.ItemDetailFragment"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_below="@+id/item_view"/>
    <TextView
        android:id="@+id/item_detail_barcode"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".view.ItemDetailFragment"
        android:layout_below="@+id/item_detail_name"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/item_sub_detail"/>
    <TextView
        android:id="@+id/item_detail_serialNumber"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".view.ItemDetailFragment"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_detail_barcode"
        android:textSize="18sp"
        android:textColor="@color/item_sub_detail"/>
    <TextView
        android:id="@+id/item_detail_location"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".view.ItemDetailFragment"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_detail_serialNumber"
        android:textSize="18sp"
        android:textColor="@color/item_sub_detail"/>


