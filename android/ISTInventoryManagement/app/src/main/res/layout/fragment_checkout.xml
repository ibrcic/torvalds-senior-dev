<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="torvalds.istinventorymanagement.checkinout.CheckInOutFragment">

    <torvalds.istinventorymanagement.checkinout.UserView.UserSection
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="1dp"
        android:background="#e0e0e0"
        android:layout_height="match_parent" />

    <torvalds.istinventorymanagement.checkinout.CheckinView.CheckInSection
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="1dp"
        android:background="#e0e0e0"
        android:layout_height="match_parent" />

    <torvalds.istinventorymanagement.checkinout.CheckoutView.CheckOutSection
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

</LinearLayout>
